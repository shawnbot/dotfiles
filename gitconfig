[user]
    name = Shawn Allen
    email = shawn.allen@github.com

[alias]
    st = status
    ci = commit
    br = branch
    co = checkout
    df = diff
    lg = log -p
    pr = !git-pr
    lsd = log --graph --decorate --pretty=oneline --abbrev-commit
    lsda = log --graph --decorate --pretty=oneline --abbrev-commit --all
    spull = !git stash save && git pull && git stash pop
    please = push --force-with-lease

[push]
    default = simple

[filter "media"]
    clean = git-media-clean %f
    smudge = git-media-smudge %f

[core]
    excludesfile = /Users/shawnbot/.gitignore

[filter "lfs"]
    clean = git-lfs clean %f
    smudge = git-lfs smudge %f
    required = true

[github]
	user = shawnbot
[credential]
	helper = osxkeychain
