[alias]
    st = status
    ci = commit
    br = branch
    co = checkout
    df = diff
    lg = log -p
    pr = pull --rebase
    lsd = log --graph --decorate --pretty=oneline --abbrev-commit --all
    spull = !git stash save && git pull && git stash pop

[push]
    default = matching
[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
